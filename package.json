{
  "name": "confectionery-store",
  "version": "1.0.0",
  "description": "Приложение для розничной торговли кондитерскими изделиями",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "fixed-server": "node server/fixed-port.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "prisma": "^5.4.2",
    "@prisma/client": "^5.4.2",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
} 